<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.samarthgupta.niec_hackathon.NGO_Activity">
        <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        card_view:cardElevation="10dp"
        android:layout_margin="30dp"
        card_view:cardCornerRadius="8dp"
        android:id="@+id/cv_NGO1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">



        <TextView
            android:id="@+id/tv_NGO1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="GOONJ"
            android:padding="15dp"
            android:layout_gravity="center_horizontal"
            android:textAppearance="?android:textAppearanceLarge"
            android:layout_margin="5dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:text="A recipient of the “NGO of the Year” award in 2007 at the India NGO Awards, this NGO aims at solving the clothing problems of the downtrodden"
                android:textAppearance="?android:textAppearanceSmall"
                android:layout_margin="5dp"/>

            </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        card_view:cardElevation="10dp"
        android:layout_margin="30dp"
        card_view:cardCornerRadius="8dp"
        android:id="@+id/cv_NGO2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tv_NGO2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="5dp"
                android:padding="15dp"
                android:text="SMILE FOUNDATION"
                android:textAppearance="?android:textAppearanceLarge" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:text="It is run by a group of corporate professionals."
                android:textAppearance="?android:textAppearanceSmall"
                android:layout_margin="5dp"/>

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        card_view:cardElevation="10dp"
        android:layout_margin="30dp"
        card_view:cardCornerRadius="8dp"
        android:id="@+id/cv_NGO3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">



            <TextView
                android:id="@+id/tv_NGO3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PRATHAM"
                android:padding="15dp"
                android:layout_gravity="center_horizontal"
                android:textAppearance="?android:textAppearanceLarge"
                android:layout_margin="5dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:text="The main aim of this NGO is to provide education to the children living in the huge slums of Mumbai and even providing education to those people who are unable to go to school."
                android:textAppearance="?android:textAppearanceSmall"
                android:layout_margin="5dp"/>

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        card_view:cardElevation="10dp"
        android:layout_margin="30dp"
        card_view:cardCornerRadius="8dp"
        android:id="@+id/cv_NGO4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">



            <TextView
                android:id="@+id/tv_NGO4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DEEPALAYA"
                android:padding="15dp"
                android:layout_gravity="center_horizontal"
                android:textAppearance="?android:textAppearanceLarge"
                android:layout_margin="5dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:text="This NGO aims at providing education to the children living in the slums of Delhi. "
                android:textAppearance="?android:textAppearanceSmall"
                android:layout_margin="5dp"/>

        </LinearLayout>
    </android.support.v7.widget.CardView>



    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        card_view:cardElevation="10dp"
        android:layout_margin="30dp"
        card_view:cardCornerRadius="8dp"
        android:id="@+id/cv_NGO5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">



            <TextView
                android:id="@+id/tv_NGO5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="HELPAGE INDIA"
                android:padding="15dp"
                android:layout_gravity="center_horizontal"
                android:textAppearance="?android:textAppearanceLarge"
                android:layout_margin="5dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:text="Established in 1978, the sole aim of this NGO is to provide resources to the elderly people of our country."
                android:textAppearance="?android:textAppearanceSmall"
                android:layout_margin="5dp"/>

        </LinearLayout>
    </android.support.v7.widget.CardView>



</LinearLayout>
</ScrollView>
